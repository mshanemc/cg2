<aura:component implements="flexipage:availableForAllPageTypes, force:LightningQuickAction" controller="DemoToolsCtrl">

	<lightning:card title="Demo Reset" variant="base">
		<aura:set attribute="actions">
			<lightning:button label="Reset" onclick="{!c.resetC}" variant="destructive" />
		</aura:set>

		<div class="slds-p-horizontal_medium">
			<p class="slds-text-heading_medium">
				Resets the demo back to its original state
			</p>
			<ul class="slds-list_dotted">
				<li>Removes the winter badge from the customer</li>
			</ul>
		</div>
	</lightning:card>

</aura:component>
